@model IEnumerable<WebApplication4.Models.Domain.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employees Record</h1>

<p>
    <a asp-action="Add">Create New</a><br />
    <label> Total Number of Employees :</label>  @ViewBag.Totalemployees
</p>
<div>
<input type="submit" value="LogIn" class="btn btn-primary" />
<input type="submit" value="LogOut" class="btn btn-primary" />
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dept)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dept)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id=item.Id}) |
                        @Html.ActionLink("Delete", "Delete", new {id=item.Id})
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

